{
  "name": "recette-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --colors",
    "test:watch": "cross-env NODE_ENV=test jest --detectOpenHandles --colors --watchAll",
    "db:drop": "./src/database/drop-db.sh && ./src/database/drop-test-db.sh",
    "db:create": "./src/database/create-db.sh && ./src/database/create-test-db.sh",
    "db:migrate": "ts-node ./src/database/migrate-db.ts && cross-env NODE_ENV=test ts-node ./src/database/migrate-db.ts",
    "db:client": "npx prisma introspect && yarn prisma generate",
    "db:seed": "./src/database/seed-db.sh",
    "db:start": "yarn db:create && yarn db:migrate && yarn db:client",
    "db:reset": "yarn db:drop && yarn db:create && yarn db:migrate",
    "dev:watch": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node src/index.ts\"",
    "dev:build": "tsc --watch --preserveWatchOutput",
    "dev:kill": "./src/__tests__/kill-node-test-instance.sh",
    "dev": "concurrently \"yarn:dev:build\" \"yarn:dev:watch\"",
    "sec:key": "node src/utils/generate-key"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/pino": "^6.3.1",
    "@types/pino-http": "^5.0.5",
    "app-root-path": "^3.0.0",
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "pg": "^8.3.3",
    "pg-hstore": "^2.3.3",
    "pino": "^6.6.1",
    "pino-http": "^5.3.0",
    "pino-pretty": "^4.2.1",
    "sequelize": "^6.3.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.1",
    "@types/sequelize": "^4.28.9",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "sequelize-cli": "^6.2.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
